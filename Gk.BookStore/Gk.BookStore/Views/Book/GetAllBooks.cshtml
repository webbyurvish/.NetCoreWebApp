@{
    ViewData["Title"] = "All Book";
}

@model IEnumerable<BookModel>

<div class="container">
    <h1>All Books</h1>
    <div class="row">

        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <partial name="_bookThumbnail" model="@book"/>
            </div>
        }
        
    </div>
</div>